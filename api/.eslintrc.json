{
    "root": true,
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "ignorePatterns": "**/migrations/*",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": false
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "import/extensions"            : [0],
        "semi"                         : ["error", "always"],
        "quotes"                       : ["error", "double"],
        "no-console"                   : 0,
        "prettier/prettier"            : ["error", { "endOfLine": "auto" }]
    }
}